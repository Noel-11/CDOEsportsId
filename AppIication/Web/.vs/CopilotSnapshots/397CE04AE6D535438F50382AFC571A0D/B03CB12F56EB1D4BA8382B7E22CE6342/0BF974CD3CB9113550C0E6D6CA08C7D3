                                ErrorMessage="Age is required" CssClass="text-danger small" Display="Dynamic" />
                            <asp:RangeValidator ID="rvAge" runat="server" ControlToValidate="txtAge" 
                                ErrorMessage="Age must be 1-120" MinimumValue="1" MaximumValue="120" Type="Integer" 
                                CssClass="text-danger small" Display="Dynamic" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            <asp:TextBox ID="txtAddress" runat="server" CssClass="form-control" TextMode="MultiLine" Rows="3" placeholder="Enter address" />
